{
  "compilerOptions": {            
    "target": "ES6",                                
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],                                 
    "outDir": "dist/",       
    "declaration": true,            
    "strict": true,
    "strictFunctionTypes": true,                      
    "esModuleInterop": true,                    
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}